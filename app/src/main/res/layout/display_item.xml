<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:id="@+id/displayItem"
    android:orientation="vertical"
>
    <ImageView
        android:id="@+id/displayItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:tintMode="multiply"
        app:tint="@color/text_1"
        android:contentDescription="@string/display_item_image" />
    <TextView
        android:id="@+id/displayItemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_1"
    />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/displayItemRecyclerView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    />
</LinearLayout>