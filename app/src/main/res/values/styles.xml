<resources>
    <style
        name="Widget.Theme.PipBoyV1.ActionBar.Fullscreen"
        parent="Widget.AppCompat.ActionBar"
    >
        <item name="android:background">@color/background_1</item>
    </style>
    <style name="Widget.Theme.PipBoyV1.ButtonBar.Fullscreen" parent="">
        <!-- Status bar color. -->
        <item name="android:background">@color/background_1</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
    <style name="TopNavTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/TopNavTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_1</item>
    </style>
    <style name="TopNavTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/text_1</item>
    </style>
    <style name="SubNavTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextAppearance">@style/SubNavTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_1</item>
    </style>
    <style name="SubNavTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/text_2</item>
    </style>
</resources>