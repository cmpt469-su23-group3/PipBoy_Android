<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PipBoyV1" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/text_1</item>
        <item name="colorPrimaryVariant">@color/text_2</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/background_1</item>
        <item name="colorSecondaryVariant">@color/background_2</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PipBoyV1.Fullscreen" parent="Theme.PipBoyV1">
        <item name="android:actionBarStyle">@style/Widget.Theme.PipBoyV1.ActionBar.Fullscreen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.PipBoyV1.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/background_1</item>
        <item name="fullscreenTextColor">@color/text_1</item>
    </style>
</resources>